server {
	listen 80 default_server;
	root /var/www/html;
	index index.html index.htm index.nginx-debian.html;
	server_name _;
	large_client_header_buffers 4 16k;

	error_page 404 /;

	location /prometheus {
		proxy_pass http://localhost:9090;
	}

	location /grafana {
		proxy_pass http://localhost:3000;
	}
}